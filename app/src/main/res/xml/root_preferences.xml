<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Service">

        <EditTextPreference
            app:dialogTitle="Enter a valid url"
            app:key="webserviceurl"
            app:summary="Click to show a text entry dialog"
            app:title="Webserver url" />
        <EditTextPreference
            app:dialogTitle="Select duration"
            app:key="seconds"
            app:summary="Set every seconds service start"
            app:title="Every seconds" />
        <EditTextPreference
            app:dialogTitle="Select devices address"
            app:key="devices"
            app:summary="Select device to watch, comma separated values"
            app:title="Devices address" />

    </PreferenceCategory>

    <PreferenceCategory app:title="State">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="enabled"
            app:summary="Click to switch on or off"
            app:title="Service enabled" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="autoupdate"
            app:summary="Click to switch on or off"
            app:title="Auto settings update from webservice" />

    </PreferenceCategory>

</PreferenceScreen>
